<h2 class="title">Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div>
  <%= f.password_field :password, :autofocus => true, :placeholder => "New Password", :class => "devise-input" %></div>

  <div>
  <%= f.password_field :password_confirmation, :placeholder => "Confirm New Password", :class => "devise-input" %></div>

  <div><%= f.submit "Change my password", :class => "devise-button" %></div>
<% end %>

<%= render "devise/shared/links" %>
