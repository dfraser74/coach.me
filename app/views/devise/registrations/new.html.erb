<h2 class="title">Sign Up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "devise-input" %></div>

  <div>
  <%= f.password_field :password, :placeholder => "Password", :class => "devise-input" %></div>

  <div>
  <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "devise-input" %></div>

  <div><%= f.submit "Sign Up", :class => "main-button devise-button" %></div>
<% end %>
